<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liwei.shiro.dao.ResourceDao">

    <select id="listResource" resultType="Resource">
        SELECT
            `id`,
            `name`,
            `permission`,
            `url`
        FROM
          `t_resource`
    </select>



</mapper>